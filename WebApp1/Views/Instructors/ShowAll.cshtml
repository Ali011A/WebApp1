@model List<WebApp1.Models.InstructorViewModel>
@{
    ViewData["Title"] = "ShowAll";
}

<h1>ShowAll</h1>



<table class="table accept-policy table-hover table-bordered table-striped table-dark" >

    <tr>
        <th>id</th>
        <th>name</th>
        <th>Image</th>
        <th>salary</th>
        <th>Address</th>
        <th>CoursName</th>
        <th>DepartmentName</th>
        <th>Details</th>
    </tr>
    @if(Model!=null){
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="/images/@item.Image" width="50" height="50" /></td>
                <td>@item.Salary</td>
                <td>@item.Address</td>
                <td>@item.CoursName</td>
                <td>@item.DepName</td>
                <td>
                    <a href="/Instructors/ShowDetails/@item.Id" class="btn btn-primary"> ShowDetails </a>
                </td>
            </tr>
        }
    }
    @if(Model==null) {
        <tr>
            <td colspan="7">No Data</td>
        </tr>
    }
    
   
</table>




