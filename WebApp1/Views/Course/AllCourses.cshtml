@model List<WebApp1.Models.CourseViewModel>
@{
    ViewData["Title"] = "AllCourses";
}

<h1>AllCourses</h1>

<style>
    .cssbuttons-io-button {
        background: #ad5389;
        background: linear-gradient( 0deg, rgba(20, 167, 62, 1) 0%, rgba(102, 247, 113, 1) 100% );
        color: white;
        font-family: inherit;
        padding: 0.5em 1em;
        padding-left: 1.2em;
        font-size: 16px;
        font-weight: 500;
        border-radius: 0.9em;
        border: none;
        letter-spacing: 0.05em;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 0.1em 0.2em rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .cssbuttons-io-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 0.25em 0.5em rgba(0, 0, 0, 0.15);
        }

        .cssbuttons-io-button:active {
            transform: translateY(0);
            box-shadow: 0 0.1em 0.2em rgba(0, 0, 0, 0.1);
        }

        .cssbuttons-io-button svg {
            height: 1.2em;
            width: 1.2em;
        }

</style>

<a href="/Course/AddCourses" class="cssbuttons-io-button">
    <svg height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0h24v24H0z" fill="none"></path>
        <path d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z" fill="currentColor"></path>
    </svg>
    <span>Add course</span>
</a>

<hr />

<table class="table accept-policy table-hover table-bordered table-striped table-dark" >

    <tr>
        <th>id</th>
        <th>Course Name</th>
        <th>Degree</th>
        <th>Min Degree</th>
        <th>Hours</th>
        <th>DepartmentName</th>
        <th>Details</th>
        <th>Edit</th>
    </tr>
    @if(Model!=null){
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.CourseName</td>
                <td>@item.Degree</td>
                <td>@item.minDegree</td>
                <td>@item.hours</td>
                <td>@item.DepName</td>
                <td>
                    <a href="/Course/Result/@item.Id" class="btn btn-primary"> ShowDetails </a>
                </td>
                <td>
                    <a href="/Course/EditCourse/@item.Id" class="btn btn-success"> Edit </a>
                </td>
            </tr>
        }
    }
    @if(Model==null) {
        <tr>
            <td colspan="7">No Data</td>
        </tr>
    }
    
   
</table>


